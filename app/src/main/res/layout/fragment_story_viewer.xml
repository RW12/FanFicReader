<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
<!-- change this to FrameLayout to be able to put button on bottom right,
 use alignParentBottom="true" to stack textviews?-->

    <TextView
        android:id="@+id/titleAndAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title by Author"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="3dp" />
    <TextView
        android:id="@+id/tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags relevant to the story"
        app:layout_constraintTop_toBottomOf="@+id/titleAndAuthor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="22dp" />
    <TextView
        android:id="@+id/characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Characters featured in the story."
        app:layout_constraintTop_toBottomOf="@+id/tags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="41dp" />
    <ScrollView
        android:id="@+id/scroller_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/characters"
        app:layout_constraintBottom_toTopOf="@id/titleScreenNextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="60dp">
        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary of the story." />
        <!--view pager-->
    </ScrollView>

    <Button
        android:id="@+id/titleScreenNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scroller_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1"
        android:background="@color/white"
        android:text="Next"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="681dp" /> <!--want to put this button on bottom-->
    <!--ALTERNATIVE: use frame layout, 2 items: one item with all the text (the text box center aligned), and the button on the bottom-->
</androidx.constraintlayout.widget.ConstraintLayout>